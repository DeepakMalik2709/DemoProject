  {{textarea class="task-submission-comment" placeholder="Add a comment" value=postComment}}
 
                 <div class="col-sm-12" class="{{if files.length 'show' 'hide' }}">
						       <ol >
        {{#each files as |file|}}
        <li>
        {{file.name}}&nbsp;({{file.size}})
         &nbsp;<span  {{action 'removeFile' file}} class="glyphicon glyphicon-remove pointer" aria-hidden="true"></span>
        </li>
        {{/each}}
        </ol>
			       			</div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <span class="{{if item.showLoading 'inlinedisplay' 'nodisplay' }}"><img src="/img/loading.gif" /></span>

            <button type="button" class="btn btn-default" {{action 'saveTaskSubmission' }} disabled={{unless files.length true}}>Save Task Submission</button>
         <button type="button"   onclick="$('#file-upload1').click();" class="btn btn-default"  disabled={{if item.showLoading true}}>Attach Files</button>
              <button type="button" class="btn btn-default" {{action 'cancelTaskSubmission' item}}>Cancel</button>
              
               <input  multiple id="file-upload1" onchange={{action "uploadFile"}} type="file" style="width: 0px; height: 0px; overflow: hidden;"  >
        </div>
    </div>			       			