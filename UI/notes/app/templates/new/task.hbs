<section class="content-header">
    <h1>
        Task
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Task</li>
    </ol>
</section>

    <!-- Main content -->
<section class="content">                 	
   <div class="row">
        <!-- left column -->
         <div class="col-md-3">
         </div>
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Create task</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                                                 
                            {{input type="text" value=model.title class="form-control" placeholder="Task  title" }}
                        </div> 
         
                        <div class="form-group overflow-hide">
                       {{post-comment-box controllerRef=controllerRef className="post-description" placeholder="Task details"   recipientList=model.recipients value=model.comment autoCompleteList=myList disabled=model.isSaving}}
                       </div>  
                                      <div class="form-group mtop">
                                      <div class="col-md-5">
                    		     {{bootstrap-datepicker autoclose=true placeholder="Click to add deadline" class="form-control" value=model.deadlineTime readonly=true}}
                    		     </div>
                    		     <div class="col-md-3">
								{{select-box content=hoursArray 
								className='form-control' didChangeAction='addHour' }} 
                    		     </div>
                    		      <div class="col-md-3">
								{{select-box content=minutesArray 
								className='form-control' didChangeAction='addMinutes' }} 
                    		     </div>
                    		     <div class="clearfix"></div>
                       </div>  
                    {{new-file-upload files=model.files item=model}}
                    
                                     <div class="form-group">
                         
	                        {{#power-select-multiple selected=selectedGroups  options=myGroups  
	                        placeholder="Please, select Group"
  							  onchange=(action (mut selectedGroups))  as |attendees| }}
							  {{attendees.name}}
							{{/power-select-multiple}}
					  </div> 
					  
	                    <div class="box-footer {{if model.isSaving 'hide' 'show'}}">
	                        <button type="submit" class="btn btn-primary" {{action 'saveTask' model}} >Save</button>
	                    </div>
                   </div><!-- /.box-body -->
                </form>
            </div><!-- /.box -->    
         </div>
   </div>
</section><!-- /.content -->

