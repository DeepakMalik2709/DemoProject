<section class="content-header">
    <h1>
        Event
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Schedule</li>
    </ol>
</section>

    <!-- Main content -->
<section class="content">                 	
   <div class="row">
        <!-- left column -->
         <div class="col-md-3">
         </div>
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">{{pageTitle}}</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                                                 
                            {{input type="text" value=model.title class="form-control" placeholder="Enter schedule  title" }}
                        </div> 
                        <div class="form-group">                                               
                            {{input type="text" value=model.location class="form-control" placeholder="Enter schedule  location" }}
                        </div>     
                        <div class="form-group">
                          
      						{{date-range-picker  label='Schedule Timing:'  start=model.start  end=model.end  }}
                        </div>  
                         <div class="form-group">
	                        {{#power-select-multiple selected=attendees  options=names  placeholder="Please, select attendees"
  							searchField="name"  onchange=(action (mut attendees))  as |attendees| }}
							  {{attendees}}
							{{/power-select-multiple}}
					  </div>                   
                        <div class="form-group">
                            <label for="exampleInputFile">Attachment</label>
                            <input type="file" id="exampleInputFile">
                            <p class="help-block">Schedule information more.</p>
                        </div>
						 <div class="form-group">
	                            <label for="exampleInputFile">Schedule desc</label> <small>Write something about schedule</small>
		                         <form>
		                            {{ textarea value=model.description class="materialize-textarea ckeditor"  style="width: 100%;" }}        
	                              </form>                              
	                    </div><!-- ./row -->
	                     <div class="form-group">
		                     <div class="checkbox">
		                            <label>
		                                {{input type="checkbox" checked=model.eventType}} is Full day Schedule
		                            </label>
	                        </div>
                         </div>
	                    <div class="box-footer">
	                        <button type="submit" class="btn btn-primary" {{action 'saveEvent' model}}>{{buttonLabel}}</button>
	                    </div>
                   </div><!-- /.box-body -->
                </form>
            </div><!-- /.box -->    
         </div>
   </div>
</section><!-- /.content -->

