<section class="content-header">
    <h1>
        Event
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Schedule</li>
    </ol>
</section>

    <!-- Main content -->
<section class="content">                 	
   <div class="row">
        <!-- left column -->
         <div class="col-md-3">
         </div>
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">{{pageTitle}}</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                                                 
                            {{input type="text" value=model.title class="form-control" placeholder="Enter schedule  title" }}
                        </div> 
                        <div class="form-group">                                               
                            {{input type="text" value=model.location class="form-control" placeholder="Enter schedule  location" }}
                        </div>    
                        <div class="form-group">
                    		    
                       {{bootstrap-datepicker autoclose=true placeholder="Enter start date" class="form-control" value=startDate}}
     
                       </div> 
                         <div class="form-group">
                    	  {{bootstrap-datepicker autoclose=true placeholder="Enter end date" class="form-control" value=endDate}}
     				   </div>  
                         <div class="form-group">
                         
	                        {{#power-select-multiple selected=attendees  options=myGroups  
	                        placeholder="Please, select attendees"
  							  onchange=(action (mut attendees))  as |attendees| }}
							  {{attendees.name}}
							{{/power-select-multiple}}
					  </div>                   
                        <div class="form-group">
                             <button type="button"   onclick="$('#file-upload2').click();" class="btn btn-default"  disabled={{if item.showLoading true}}>Attach Files</button>
                            <p class="help-block">Schedule attachment.</p>
                        </div>
                         <div class="col-sm-12" class="{{if item.files.length 'show' 'hide' }}">
					        <ol >
					        {{#each model.files as |file|}}
					        <li>
					        {{file.name}}&nbsp;({{file.size}})
					         &nbsp;<span  {{action 'removeFile' file}} class="glyphicon glyphicon-remove pointer" aria-hidden="true"></span>
					        </li>
					        {{/each}}
					        </ol>
					        </div>
						 <div class="form-group">
	                            <label for="exampleInputFile">Schedule desc</label> <small>Write something about schedule</small>                              
	                          {{textarea type="text" value=model.description class="form-control" placeholder="Description"}}                              
	                    </div><!-- ./row -->
	                     <div class="form-group">
		                     <div class="checkbox">
		                            <label>
		                                {{input type="checkbox" checked=model.eventType}} is Full day Schedule
		                            </label>
	                        </div>
                         </div>
	                    <div class="box-footer">
	                        <button type="submit" class="btn btn-primary" {{action 'saveEvent' model}}>{{buttonLabel}}</button>
	                    </div>
                   </div><!-- /.box-body -->
                </form>
            </div><!-- /.box -->    
         </div>
   </div>
</section><!-- /.content -->

